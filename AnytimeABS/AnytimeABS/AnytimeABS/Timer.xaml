<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnytimeABS.Timer">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <Label Text="Remeber to keep your abs tight when you hear the tone!" FontSize="Large" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>
            <Button Text="Start Timer" Clicked="Start_Timer_Button_Clicked" HorizontalOptions="Center" x:Name="StartTimer"/>
            <Button Text="Stop Timer" Clicked="Stop_Timer_Button_Clicked" HorizontalOptions="Center" x:Name="StopTimer"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>